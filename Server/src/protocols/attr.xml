<?xml version="1.0" encoding="utf-8"?>
<namespace name="attr">
	<protocol  name="BeanImport" type="1001" maxsize="32" prior="1"> 
		<variable name="attr" type="chuhan.gsp.attr.AttrType"/>
		<variable name="calcattr" type="chuhan.gsp.attr.CalcAttrType"/>
		<variable name="effect" type="chuhan.gsp.attr.EffectType"/>
	</protocol>
	
	<!-- 与客户端通信用到的属性ID -->
	<!--不要擅自在此加名称与ID，如果要加一个新的属性和ID，先与策划商量，以免冲突-->
	<bean name="AttrType">  
		<enum name="ARMY" value="10"/>	兵力
		<enum name="ATTACK" value="20"/>	攻击
		<enum name="DEFEND" value="30"/>	防御
		<enum name="SKILL" value="40"/>	计略
		<enum name="POWER" value="50"/> 计策强度
		<enum name="CRUEL_RATE" value="60"/> 物理暴击几率
		<enum name="POWER_CRUEL_RATE" value="70"/> 计策暴击几率
		<enum name="SPEED" value="80"/> 速度
		<enum name="NO_HURT" value="90"/> 免伤
		<enum name="NO_DEF" value="100"/> 破防
		<enum name="TI" value="110"/> 体力
		<enum name="REDUCE" value="130"/> 距离衰减
		<enum name="HIT" value="140"/> 命中
		<enum name="DODGE" value="150"/> 躲闪
		<enum name="ANTI_CRUEL_RATE" value="160"/> 暴击抗性几率
		<enum name="ANTI_SINGLE_SKILL" value="170"/> 单法抗
		<enum name="ANTI_MULTI_SKILL" value="180"/> 群法抗
		
		
 		<!--不要擅自在此加名称与ID，如果要加一个新的属性和ID，先与策划商量，以免冲突-->
 	</bean>
 	
 		
	<bean name="CalcAttrType">
		<!-- 战斗一级二级三级属性 ID，只有这里有的属性ID，AttrRole才会去计算并保存 -->
		<enum name="ARMY" value="10"/>	兵力
		<enum name="ATTACK" value="20"/>	攻击
		<enum name="DEFEND" value="30"/>	防御
		<enum name="SKILL" value="40"/>	计略
		<enum name="CRUEL_RATE" value="60"/> 物理暴击几率
		<enum name="POWER_CRUEL_RATE" value="70"/> 计策暴击几率
		<enum name="SPEED" value="80"/> 速度
		<enum name="NO_HURT" value="90"/> 免伤
		<enum name="NO_DEF" value="100"/> 破防
		<enum name="HIT" value="140"/> 命中
		<enum name="DODGE" value="150"/> 躲闪
		<enum name="ANTI_CRUEL_RATE" value="160"/> 暴击抗性几率
	</bean>
		
	<bean name="EffectType">
		<enum name="ATTACK_ABL" value="21"/>	攻击

	</bean>
	
	<bean name="Buff">
		<variable name="time" type="long" /> 剩余的时间
		<variable name="count" type="int" /> 剩余的回合数/次数
		<variable name="tipArgs" type="list" value="octets" /> 显示Buff Tip的参数
	</bean>
 	
	<protocol  name="SRefreshRoleData" type="1002" maxsize="65536" prior="1">
		<variable name="datas" type="map" key="int" value="float" validator="key=(0,)"/>
	</protocol>
		
	<!-- buff改变结果更新协议 -->
	<protocol maxsize="65535" name="SBuffChangeResult" prior="1" type="1003">
		<variable name="agentType" type="int" />
		<variable name="id" type="long" />
		<variable name="petid" type="int" />
		<variable name="addedbuffs" type="map" key="int" value="Buff" /> 添加的buff, key=buff type id,更新buff时也用此部分
		<variable name="deletedBuffs" type="list" value="int"/> 删除的buff id
	</protocol>
	
	<protocol  name="SRefreshYuanBao" type="1004" maxsize="64" prior="1">
		<variable name="yuanbao" type="int"/>
	</protocol>

	<protocol  name="SRefreshLevel" type="1005" maxsize="64" prior="1">
		<variable name="level" type="short"/>
	</protocol>	

	<protocol  name="SRefreshVipLevel" type="1006" maxsize="64" prior="1">
